<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.framgia.nvmanh.boxmovie.screen.overview.ItemCompanyViewModel"/>
    </data>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:onClick="@{() -> viewModel.onClickItemCompany()}"
        >

        <ImageView
            android:id="@+id/image_company"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_30"
            android:scaleType="fitXY"
            app:imageUrl="@{viewModel.observableCompany.logoPath}"
            android:background="@android:color/white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.observableCompany.name}"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image_company"
            />
    </android.support.constraint.ConstraintLayout>
</layout>
